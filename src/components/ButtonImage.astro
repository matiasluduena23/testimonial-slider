<div class="wrap-button">
    <button class="prev disable">
        <svg xmlns="http://www.w3.org/2000/svg" width="11" height="17"
            ><path
                fill="none"
                stroke="#8585AC"
                stroke-width="3"
                d="M11 1L3 9l8 8"></path></svg
        >
    </button>
    <button class="next">
        <svg xmlns="http://www.w3.org/2000/svg" width="11" height="17"
            ><path
                fill="none"
                stroke="#8585AC"
                stroke-width="3"
                d="M2 1l8 8-8 8"></path></svg
        >
    </button>
</div>

<style>
    .wrap-button {
        position: absolute;
        bottom: -18px;
        left: 50%;
        transform: translateX(-50%);
        margin-inline: auto;
        z-index: 10;
    }

    button {
        border: none;
        background-color: white;
        z-index: 10;
        cursor: pointer;
    }

    .prev {
        padding: 0.5rem 1rem;
        border-radius: 30px 0 0 30px;
        z-index: 100;
    }

    .disable {
        opacity: 0.7;
    }

    .next {
        padding: 0.5rem 1rem;
        border-radius: 0 30px 30px 0;
    }
</style>
