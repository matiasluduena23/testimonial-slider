---
import ImageSection from './ImageSection.astro';
import TextSection from './TextSection.astro';
---

<main>
    <div class="container">
        <ImageSection />
        <TextSection />
    </div>
</main>

<style is:global>
    main {
        background-image: url('../assets/pattern-curve.svg');
        background-repeat: no-repeat;
        background-position: bottom left;
        background-size: 100%;
    }

    @media (min-width: 900px) {
        main {
            background-size: 50%;
        }

        main > div {
            display: flex;
            flex-direction: row-reverse;
            align-items: center;
        }

        main > div > section:first-child {
            width: 100%;
        }

        main > div > section:last-child {
            width: 50%;
        }
    }
</style>
